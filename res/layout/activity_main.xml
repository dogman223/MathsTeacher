<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp" />

    <TextView
        android:id="@+id/text0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="270dp"
        android:text="9" />
    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button9"
        android:layout_alignTop="@id/button9"
        android:layout_marginLeft="120dp"
        android:layout_marginStart="120dp"
        android:text="8"/>
    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/button9"
        android:layout_alignTop="@id/button9"
        android:layout_marginLeft="210dp"
        android:layout_marginStart="210dp"
        android:text="7"/>
    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:layout_alignStart="@id/button9"
        android:layout_alignLeft="@id/button9"
        android:text="6"/>
    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button8"
        android:layout_alignLeft="@id/button8"
        android:layout_alignTop="@id/button6"
        android:text="5"/>
    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button7"
        android:layout_alignLeft="@id/button7"
        android:layout_alignTop="@id/button6"
        android:text="4"/>
    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button9"
        android:layout_alignLeft="@id/button9"
        android:layout_marginTop="360dp"
        android:text="3"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button8"
        android:layout_alignLeft="@id/button8"
        android:layout_alignTop="@id/button3"
        android:text="2"/>
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button7"
        android:layout_alignLeft="@id/button7"
        android:layout_alignTop="@id/button3"
        android:text="1"/>
    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button9"
        android:layout_alignLeft="@id/button9"
        android:layout_marginTop="410dp"
        android:text="C"/>

    <Button
        android:id="@+id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button8"
        android:layout_alignLeft="@id/button8"
        android:layout_alignTop="@id/buttonClear"
        android:text="0"/>

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button7"
        android:layout_alignLeft="@id/button7"
        android:layout_alignTop="@id/buttonClear"
        android:text="."/>

    <Button
        android:id="@+id/buttonSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_alignTop="@id/button9"
        android:layout_marginStart="300dp"
        android:text="+"/>
    <Button
        android:id="@+id/buttonSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/buttonSum"
        android:layout_alignLeft="@id/buttonSum"
        android:layout_alignTop="@id/button6"
        android:text="-"/>
    <Button
        android:id="@+id/buttonMul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/buttonSum"
        android:layout_alignLeft="@id/buttonSum"
        android:layout_alignTop="@id/button3"
        android:text="*"/>
    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/buttonSum"
        android:layout_alignLeft="@id/buttonSum"
        android:layout_alignTop="@id/buttonClear"
        android:text="/"/>
    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button9"
        android:layout_alignLeft="@id/button9"
        android:layout_marginTop="460dp"
        android:layout_alignEnd="@id/buttonSum"
        android:layout_alignRight="@id/buttonSum"
        android:text="="
        />
    <Button
        android:id="@+id/buttonTriangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button9"
        android:layout_alignLeft="@id/button9"
        android:layout_marginTop="510dp"
        android:layout_alignEnd="@id/button8"
        android:layout_alignRight="@id/button8"
        android:text="Triangle area" />
    <Button
        android:id="@+id/buttonCA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button7"
        android:layout_alignLeft="@id/button7"
        android:layout_alignTop="@id/buttonTriangle"
        android:layout_alignEnd="@id/buttonSum"
        android:layout_alignRight="@id/buttonSum"
        android:text="Circle area"/>
    <Button
        android:id="@+id/buttonTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button9"
        android:layout_alignLeft="@id/button9"
        android:layout_marginTop="560dp"
        android:layout_alignEnd="@id/button8"
        android:layout_alignRight="@id/button8"
        android:text="Trapezoid area" />
    <Button
        android:id="@+id/buttonDeltoid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button7"
        android:layout_alignLeft="@id/button7"
        android:layout_alignTop="@id/buttonTA"
        android:layout_alignEnd="@id/buttonSum"
        android:layout_alignRight="@id/buttonSum"
        android:text="Deltoid area" />
    <Button
        android:id="@+id/buttonPDA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button9"
        android:layout_alignLeft="@id/button9"
        android:layout_marginTop="610dp"
        android:layout_alignEnd="@id/button8"
        android:layout_alignRight="@id/button8"
        android:text="Parallelogram/diamond area" />
    <Button
        android:id="@+id/buttonCC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/button7"
        android:layout_alignLeft="@id/button7"
        android:layout_alignTop="@id/buttonPDA"
        android:layout_alignEnd="@id/buttonSum"
        android:layout_alignRight="@id/buttonSum"
        android:text="Circle circumference"/>


</RelativeLayout>